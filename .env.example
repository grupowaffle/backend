# Banco de Dados - NEON POSTGRESQL (OBRIGATÓRIO)
DATABASE_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require
NEON_URL=postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# Autenticação JWT (OBRIGATÓRIO)
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-chars
JWT_EXPIRES_IN=7d

# Cloudflare R2 Storage para Imagens (OBRIGATÓRIO)
R2_DOMAIN=your-r2-domain.com
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# BeehIV Integration (OPCIONAL - para sync de newsletters)
BEEHIIV_API_KEY=your-beehiiv-api-key
BEEHIIV_MARKETING_API_KEY=your-beehiiv-marketing-key
BEEHIIV_BRANDS_API_KEY=your-beehiiv-brands-key
BEEHIIV_INTELLIGENCE_API_KEY=your-beehiiv-intelligence-key

# Email Service (OPCIONAL - para notificações)
RESEND_API_KEY=your-resend-api-key

# AI Integration (OPCIONAL - para processamento de conteúdo)
GEMINI_API_KEY=your-gemini-api-key

# Social Media (OPCIONAL - para integração com redes sociais)
FACEBOOK_ACCESS_TOKEN=your-facebook-token
INSTAGRAM_ACCESS_TOKEN=your-instagram-token
TIKTOK_ACCESS_TOKEN=your-tiktok-token

# WhatsApp Business (OPCIONAL)
WA_TOKEN=your-whatsapp-token
WA_BUSINESS_NUMBER=your-whatsapp-number

# Meta Conversion API (OPCIONAL)
META_CONVERSION_TOKEN=your-meta-conversion-token

# Outros (OPCIONAL)
TRACKING_BASE_URL=https://your-tracking-domain.com
HOME_SERVER=https://your-home-server.com
REFERRALS_SERVER=https://your-referrals-server.com

# Development (OPCIONAL)
NODE_ENV=development
DEV_TOKEN=your-dev-token

# Master Access (OPCIONAL - para acesso de emergência)
MASTER_PASSWORD=your-master-password

# Firebase (OPCIONAL - se usando Firebase para algo específico)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key

# Instagram Accounts (OPCIONAL)
IG_THENEWS=your-thenews-ig
IG_THEBIZ=your-thebiz-ig

# JWT Users (OPCIONAL)
JWT_USERS=your-jwt-users-secret

# Google Webhook (OPCIONAL)
GOOGLE_WEBHOOK_URL=https://your-google-webhook.com

# Webhook Verify Token (OPCIONAL)
WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

